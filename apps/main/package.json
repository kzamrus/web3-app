{
  "name": "@lombard.finance/app",
  "description": "BTC liquid staking app",
  "repository": "lombardfinance.com",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "homepage": "/app",
  "buildFolderName": "build",
  "scripts": {
    "start:stage": "vite --mode stage",
    "start:stage:turbo": "cd ../../ && turbo run start:stage --filter @lombard.finance/app",
    "start:testnet": "vite --mode testnet",
    "start:testnet:turbo": "cd ../../ && turbo run start:testnet --filter @lombard.finance/app",
    "start:prod": "vite --mode prod",
    "start:prod:turbo": "cd ../../ && turbo run start:prod --filter @lombard.finance/app",
    "build:stage": "tsc --noEmit && vite build --mode stage",
    "build:stage:turbo": "cd ../../ && turbo run build:stage --filter @lombard.finance/app",
    "build:testnet": "tsc --noEmit && vite build --mode testnet",
    "build:testnet:turbo": "cd ../../ && turbo run build:testnet --filter @lombard.finance/app",
    "build:prod": "tsc --noEmit && vite build --mode prod",
    "build:prod:turbo": "cd ../../ && turbo run build:prod --filter @lombard.finance/app",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint-staged": "lint-staged",
    "types": "tsc --noEmit -p tsconfig.json",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\" && eslint --fix --ext .tsx,.ts src/",
    "prepare": "husky install",
    "postbuild": "node scripts/copy-html.cjs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@lombard.finance/sdk": "*",
    "@ankr.com/provider": "^5.0.5e",
    "web3": "4.11.1",
    "web3-core": "4.5.0",
    "web3-eth-contract": "4.6.0",
    "web3-utils": "4.3.1",
    "@walletconnect/ethereum-provider": "2.14.0",
    "@walletconnect/modal": "2.6.2",
    "@ankr.com/utils": "^1.3.7",
    "@bitcoin-js/tiny-secp256k1-asmjs": "^2.2.3",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^5.15.15",
    "@mui/x-data-grid": "^7.5.0",
    "@reduxjs/toolkit": "^2.2.3",
    "@tanstack/react-query": "^5.50.1",
    "async-retry": "^1.3.3",
    "axios": "^1.6.8",
    "bignumber.js": "^9.1.2",
    "bitcoin-address-validation": "^2.2.3",
    "bitcoinjs-lib": "^6.1.5",
    "boring-vault-ui": "1.6.1",
    "date-fns": "^3.6.0",
    "ethers": "^6.13.1",
    "lodash-es": "^4.17.21",
    "notistack": "^3.0.1",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.3",
    "react-intl-universal": "^2.11.1",
    "react-qrcode-logo": "^2.10.0",
    "react-redux": "^9.1.1",
    "react-router-dom": "^6.22.3",
    "react-uid": "^2.3.3",
    "recharts": "^2.12.7",
    "react-window": "^1.8.10",
    "redux-persist": "^6.0.0",
    "rlp": "^3.0.0",
    "tss-react": "^4.9.6",
    "@binance-chain/bsc-connector": "^1"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.8",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.2.79",
    "@types/react-copy-to-clipboard": "^5.0.7",
    "@types/react-dom": "^18.2.25",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.9",
    "vite-plugin-ejs": "^1.7.0",
    "vite-plugin-svg-sprite": "^0.5.1",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
